{
  "manifest_version": 3,
  "name": "Email Finder Verifier",
  "version": "1.0.0",
  "description": "Find and verify email addresses on any webpage. Extract contact information easily.",
  "author": "Md Hridoy Hossain",
  "homepage_url": "https://github.com/idvhridoy",
  "permissions": ["activeTab", "storage", "clipboardWrite"],
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["js/content.js"] }],
  "action": { "default_popup": "popup/popup.html", "default_icon": { "16": "icons/icon16.png", "128": "icons/icon128.png" }},
  "options_page": "options/options.html",
  "icons": { "16": "icons/icon16.png", "128": "icons/icon128.png" }
}
