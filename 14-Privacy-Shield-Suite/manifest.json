{
  "manifest_version": 3,
  "name": "Privacy Shield Suite",
  "version": "1.0.0",
  "description": "Advanced privacy protection with fingerprint randomization, user agent spoofing, and tracking prevention.",
  "author": "Md Hridoy Hossain",
  "homepage_url": "https://github.com/idvhridoy",
  "permissions": ["storage", "webRequest", "declarativeNetRequest", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "js/background.js" },
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["js/content.js"], "run_at": "document_start", "world": "MAIN" }],
  "action": { "default_popup": "popup/popup.html", "default_icon": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }},
  "options_page": "options/options.html",
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
}
