{
  "manifest_version": 3,
  "name": "Task Management Hub",
  "version": "1.0.0",
  "description": "Manage tasks, set reminders, and track your productivity with kanban boards.",
  "author": "Md Hridoy Hossain",
  "homepage_url": "https://github.com/idvhridoy",
  "permissions": ["storage", "alarms", "notifications"],
  "action": { "default_popup": "popup/popup.html", "default_icon": { "16": "icons/icon16.png", "128": "icons/icon128.png" }},
  "options_page": "options/options.html",
  "icons": { "16": "icons/icon16.png", "128": "icons/icon128.png" }
}
