{
  "manifest_version": 3,
  "name": "Focus Distraction Blocker",
  "version": "1.0.0",
  "description": "Block distracting websites and stay focused. Customizable blocklist with schedules.",
  "author": "Md Hridoy Hossain",
  "homepage_url": "https://github.com/idvhridoy",
  "permissions": ["storage", "tabs", "alarms", "notifications"],
  "background": { "service_worker": "js/background.js" },
  "action": { "default_popup": "popup/popup.html", "default_icon": { "16": "icons/icon16.png", "128": "icons/icon128.png" }},
  "options_page": "options/options.html",
  "web_accessible_resources": [{ "resources": ["blocked.html"], "matches": ["<all_urls>"] }],
  "icons": { "16": "icons/icon16.png", "128": "icons/icon128.png" }
}
