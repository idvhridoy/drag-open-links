{
  "manifest_version": 3,
  "name": "Drag Open Links",
  "short_name": "DragOpenLinks",
  "description": "Open multiple links at once by drawing a selection rectangle. Simply drag to select links and open them all in new tabs. Fast, free, and privacy-focused.",
  "version": "1.0.0",
  "author": "Md Hridoy Hossain",
  "homepage_url": "https://github.com/idvhridoy/drag-open-links",
  "action": {
    "default_title": "Drag Open Links - Settings",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
