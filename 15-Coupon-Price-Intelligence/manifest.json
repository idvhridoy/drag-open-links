{
  "manifest_version": 3,
  "name": "Coupon Price Intelligence",
  "version": "1.0.0",
  "description": "Find coupons automatically and track prices for the best deals on shopping sites.",
  "author": "Md Hridoy Hossain",
  "homepage_url": "https://github.com/idvhridoy",
  "permissions": ["activeTab", "storage", "notifications"],
  "content_scripts": [{ "matches": ["*://*.amazon.com/*", "*://*.ebay.com/*", "*://*.walmart.com/*", "*://*.target.com/*"], "js": ["js/content.js"] }],
  "action": { "default_popup": "popup/popup.html", "default_icon": { "16": "icons/icon16.png", "128": "icons/icon128.png" }},
  "options_page": "options/options.html",
  "icons": { "16": "icons/icon16.png", "128": "icons/icon128.png" }
}
